<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
    <Appenders>
        <File name="FileLog" fileName="logs/app.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="FileLog"/>
        </Root>
        <Root level="error">
            <AppenderRef ref="FileLog"/>
        </Root>
    </Loggers>
</Configuration>